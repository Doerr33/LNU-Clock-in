page{
  background-color: #fff;
}
.UCenter-bg {
  /* background-image: url(https://image.weilanwl.com/color2.0/index.jpg); */
  background-color: #fff;
  /* background-size: cover; */
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}
.header button {
    text-align: left;
    position: relative;
}

.header button image {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 25rpx;
    top: 25rpx;
}

.header button text {
    position: absolute;
    width: 200rpx;
    left: 260rpx;
    text-align: center;
    color: #ff9c39;
    font-size: 50rpx;
    top: -20rpx;
}

.title {
    width: 100%;
    padding: 20rpx 0;
    font-size: 30rpx;
    text-align: left;
    color: #888;
}

.chart {
    width: 100%;
    height: 400rpx;
    background-color: #e9f7fe;
}

.tips {
    text-align: left;
    width: 100%;
    font-size: 25rpx;
    color: #ff9c39;
    padding: 15rpx 0;
}

.footer {
    padding: 20rpx 20rpx 10rpx 20rpx;
}

.footer image {
    width: 710rpx;
    height: 202rpx;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
}